@model IEnumerable<OnlineShop.Models.ViewModels.Categorys.CategoryVM>

@{
    ViewBag.Title = "Category";
}

<h2 class="mt-5 text-center">Category</h2>

@if (TempData["SM"] != null)
{
    <div class="text-center alet alert-success col-7 card card-body mb-3 mt-3 container">
        @TempData["SM"]
    </div>
}

<p class="text-center mb-5">
    @Html.ActionLink("Add New Category", "AddCategory", "", new { @class = "btn btn-dark" })
</p>
<table class="table col-7 container-sm">
    <tr>
        <th>
            Title
        </th>
        <th>
            Type
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="w-25">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
                @Html.ActionLink("Details", "DetailsCategory", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id }, new { @class = "delete" })
            </td>
        </tr>
    }

</table>

@section Scripts
{
    <script>
        $(function () {
            $("a.delete").click(function () {
                if (!confirm("Confirm category deletion")) return false;
            });
        });
    </script>
}